{
  "name": "graphql-server",
  "private": true,
  "workspaces": [
    ".",
    "src/shared"
  ],
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf dist && tsc",
    "dev": "tsx watch src/server.ts",
    "dev:build": "yarn build && yarn dev",
    "start": "yarn build && node dist/src/server.js",
    "codegen": "graphql-codegen --config src/shared/graphql/codegen.ts",
    "migrate": "tsx src/shared/node_modules/.bin/knex --knexfile src/shared/database/config.ts migrate:latest",
    "migrate:rollback": "tsx src/shared/database/list-last-batch-migrations.ts",
    "migrate:list": "tsx src/shared/node_modules/.bin/knex --knexfile src/shared/database/config.ts migrate:list"
  },
  "type": "module",
  "author": "Inkverse",
  "license": "AGPL-3.0",
  "description": "GraphQL Server for Inkverse",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "lodash-es": "^4.17.21",
    "notion-client": "^7.1.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.1",
    "@graphql-codegen/typescript-resolvers": "4.4.0",
    "@types/cors": "^2.8.17",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
